/* POST LIST */
ul.posts
    list-style-type none
    padding 0

    .meta
        display block
        font-size 0.8em
        font-style italic

        @media all and (min-width: 40em)
            display inline
            font-size 0.9em

            &:before
                content ' — '

    li
        @media all and (min-width: 25em)
            padding-left 1.1em

            &:before
                content "—"
                position absolute
                display inline-block
                width 0.75em
                margin-left -1em
                overflow hidden
        @media all and (min-width: 75em)
            padding-left 0
        

/* POST */
.post
    overflow hidden /* clearfix */

    .meta
        font-style italic
        font-size 0.9em

    .link-prev
    .link-next
        display block
        text-decoration none
        text-align center
        padding 0.25em 1.4em

    .link-prev
        .title
            padding-left 0.4em
            text-decoration underline

        .arr
            margin-left -1.4em

    .link-next
        .title
            padding-right 0.4em
            text-decoration underline

        .arr
            margin-right -1.4em

    @media all and (min-width: 30em)
        .link-prev
        .link-next
            .arr
                margin 0

        .link-prev
            width 48%
            float left
            padding-right 2%
            text-align left
            padding-left 0

        .link-next
            width 48%
            float right
            padding-left 2%
            padding-right 0
            text-align right

    @media all and (min-width: 85em)
        .link-prev
        .link-next
            display inline-block
            width auto
            position fixed
            top 50%
            margin-top -1.35em
            background #EAE7E4 url(/i/background.jpg)
            padding 0.6em
            border 1px solid #CCC3C0
            font-size 1.5em

            .title
                text-decoration none
                display none

            &:hover .title
                display inline

        .link-prev
            border-radius 0 0.3em 0.3em 0
            left 0
            border-left 0

            &:hover
                padding-left 1.2em

        .link-next
            background-position 100% 0
            border-radius 0.3em 0 0 0.3em
            right 0
            border-right 0

            &:hover
                padding-right 1.2em


/* GENERATOR */
.pepyaka-generator
    html.js & .pepyaka-fallback-form
        display none

    > section
        margin-bottom 2em
        text-align center

    section.font-settings
        ul.font-list
            text-align center
            list-style-type none
            padding 0
            margin 0

            li
                display inline-block
                max-width 33.33%
                width 140px
                position relative
                margin 0

                @media all and (min-width: 30em)
                    max-width 20%

                label
                    position relative
                    display block
                    text-align center
                    height 0
                    margin 0 5px
                    padding-bottom 115%
                    border-radius 0.5em
                    cursor pointer
                    border 3px dashed #aaa
                    -webkit-box-sizing border-box
                    -moz-box-sizing border-box
                    box-sizing border-box
                    -webkit-user-select none
                    -moz-user-select none
                    -ms-user-select none
                    user-select none

                    span
                        position absolute
                        top 0
                        left 0
                        width 100%
                        height 100%
                        display block
                        
                        &:before
                            content ''
                            display inline-block
                            height 100%
                            vertical-align middle

                    img
                        max-width 100%

                input
                    position absolute
                    opacity 0
                    top 50%

                    &:checked + label
                        border 3px solid #35B5FF

                    &:focus + label
                        outline 2px dotted

                    &.is-mouse-clicked + label
                    &:focus + label:hover
                        outline none

    section.text
        transition padding 0.5s ease

        input.main-text-input
            font-size 1.5em
            width 100%
            -webkit-box-sizing border-box
            -moz-box-sizing border-box
            box-sizing border-box
            transition font-size 0.5s ease,
                       border linear 0.2s,
                       box-shadow linear 0.2s

            @media all and (min-width: 60em)
                &:focus + .randomize-hint
                    padding-left 0

                    .enter-hint
                        padding-left 0
                        opacity 1

        .randomize-hint
            margin 0.5em 0 0 0
            padding-left 6.1em
            font-size 0.9em
            transition visibility 1s cubic-bezier(1,-0.57,.9,.88),
                       opacity 1s cubic-bezier(1,-0.57,.9,.88),
                       padding 0.2s ease

        .enter-hint
            padding-left 2em
            opacity 0
            transition padding 0.2s ease,
                       opacity 0.2s ease

    &.is-empty section.text
        @media all and (min-width: 40em)
            padding-top 1.5em
            padding-bottom 1.5em

            input.main-text-input
                font-size 2em

    &.is-empty section.text .randomize-hint
    &.is-single-font-selected section.text .randomize-hint
        visibility hidden
        opacity 0
        transition visibility 0.2s ease,
                   opacity 0.2s ease

    section.preview
        background #fff
        padding 1em
        border-radius 1em

        img
            max-height 70px

            @media all and (min-width: 30em)
                max-height 100px

            @media all and (min-width: 40em)
                max-height none

    &.is-empty section.preview
        display none

    section.code
        text-align center

        ul.markup-switcher
            list-style-type none
            padding 0
            margin-bottom 0.5em

            li
                display inline-block
                margin 0 0.2em 0.5em 0.2em
                padding 0.1em 0.5em
                border-radius 0.3em
                cursor pointer

                &.active
                    position relative
                    background #9FEB14

                    &:after
                        content ''
                        position absolute
                        display block
                        top 100%
                        left 50%
                        width 0
                        height 0
                        margin-left -6px
                        border 6px solid
                        border-bottom 0
                        border-color #9FEB14 transparent transparent transparent

                    > *
                        color #fff
                        border-bottom-color transparent

        textarea.code-output
            -webkit-box-sizing border-box
            -moz-box-sizing border-box
            box-sizing border-box
            width 100%
            max-width 40em
            height 10em

    &.is-empty section.code
        display none

    section.share
        display block
        text-align center

        .share-buttons
            display none

        &.is-active
            .share-buttons
                display block

                .b-share_theme_counter .b-share-btn__wrap
                    float none
                    display inline-block
                    vertical-align middle
                    margin 0 0.3em 0.5em

            .share-fallback-links
                display none

                > *
                    margin 0 1.5em

    html.js &.is-empty section.share
        display none

/* DIZAINA LOGO */
a.dizaina-logo
    display inline-block
    border-radius 0.3em
    background #dbd2cd
    padding 0.45rem 0.6rem
    font-size 0.8rem
    color white
    text-decoration none
    white-space nowrap

    &:focus
    &:hover
    &:active
        -webkit-animation-duration 0.4s
        -webkit-animation-name ondrugs
        -webkit-animation-iteration-count infinite
        animation-duration 0.4s
        animation-name ondrugs
        animation-iteration-count infinite